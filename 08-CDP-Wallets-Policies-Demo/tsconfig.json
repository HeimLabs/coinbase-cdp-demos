{
  "compilerOptions": {
    "target": "ES2020", 
    "module": "ESNext", 
    "rootDir": "./", 
    "outDir": "./dist", 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "strict": true, 
    "skipLibCheck": true, 
    "moduleResolution": "node", 
    "resolveJsonModule": true, 
    "sourceMap": true,
    "allowJs": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules", 
    "dist"
  ]
}
